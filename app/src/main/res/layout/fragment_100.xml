<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--导航栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/NavigaterBar_100"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Top_Navigation_Height">

        <TextView
            android:id="@+id/MyFarm_100"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="我的农场"
            android:textSize="25dp" />

    </android.support.v7.widget.Toolbar>

    <!--创建农场栏-->
    <RelativeLayout
        android:id="@+id/createfarm_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Fragment_100"
        android:layout_below="@+id/NavigaterBar_100"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/create_100"
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ffff"
                android:text="创建我的农场"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="创建完成后会显示预警信息"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>

    <!--生成报告-->
    <RelativeLayout
        android:id="@+id/rl_makeReport_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/Fragment_100">

        <Button
            android:id="@+id/makeReport_100"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="#00ff00"
            android:text="生成报告"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/Fragment_100"
        android:layout_below="@id/createfarm_100"
        android:layout_above="@id/rl_makeReport_100"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/gridview_100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:layout_marginBottom="@dimen/Fragment_100"
            android:layout_marginTop="@dimen/Fragment_100">
        </GridView>

    </RelativeLayout>

</RelativeLayout>