<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_top_news"
        android:layout_width="match_parent"
        android:layout_height="200dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_btn_container"
        android:orientation="horizontal"
        android:layout_below="@id/viewpager_top_news"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <ImageView
            android:id="@+id/iv_watch_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
        <ImageView
            android:id="@+id/iv_search_market"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
        <ImageView
            android:id="@+id/iv_learn_tech"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_view"
        android:layout_below="@id/ll_btn_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="#E3E3E3"
        android:text="为您推荐"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <FrameLayout
        android:id="@+id/container_300"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"></FrameLayout>

    <ListView
        android:id="@+id/list_news_300"
        android:layout_below="@id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <ProgressBar
        android:id="@+id/progressbar_300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/Loading_ProgressBar"
        android:visibility="invisible"/>
</RelativeLayout>