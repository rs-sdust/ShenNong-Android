<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_edit_person_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Top_Navigation_Height"
            android:background="@color/color_main">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="编辑个人资料"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_edit_person_info"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_person_grey_24dp"/>
            <TextView
                android:id="@+id/load_image_info"
                android:text="头像"
                android:layout_below="@id/image_edit_person_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_name_edit_info"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓          名：" />

            <EditText
                android:id="@+id/et_name_edit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入姓名"
                android:background="@null"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_Dividing_line_height"
            android:background="@color/color_Dividing_line"/>

        <LinearLayout
            android:id="@+id/ll_phone_edit_info"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码：" />

            <TextView
                android:id="@+id/tv_phone_edit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_Dividing_line_height"
            android:background="@color/color_Dividing_line"/>

        <LinearLayout
            android:id="@+id/ll_degree_edit_info"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身          份：" />

            <Spinner
                android:id="@+id/spinner_degree_edit_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/degrees">
            </Spinner>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#E3E3E3"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/ll_location_edit_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农场位置:"/>

            <Spinner
                android:id="@+id/spinner_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </Spinner>

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </Spinner>

            <Spinner
                android:id="@+id/spinner_county"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </Spinner>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_Dividing_line_height"
            android:background="@color/color_Dividing_line"/>

        <LinearLayout
            android:id="@+id/ll_farm_name_edit"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="农场名称："
                android:gravity="center"
                android:id="@+id/tv_farm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/farm_name_print"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_farm_name"
                android:visibility="visible"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/farm_name_select"
                android:layout_width="0dp"
                android:layout_toRightOf="@id/tv_farm_name"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_weight="1"></Spinner>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_Dividing_line_height"
            android:background="@color/color_Dividing_line"/>

    </LinearLayout>

    <Button
        android:id="@+id/save_edit_person_info"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_login_shape"
        android:text="保   存"
        android:textSize="18dp"
        android:textColor="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>